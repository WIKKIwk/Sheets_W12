# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Bu faylni nusxa ko'chiring: cp .env.production.example .env.production
# Va hamma qiymatlarni o'zgartiring!

# ========================================
# DATABASE SETTINGS
# ========================================
DB_USER=your_db_user_here
DB_PASSWORD=STRONG_PASSWORD_HERE_min_32_chars
DB_NAME=sheetmaster_production
DB_HOST=converter_db
DB_PORT=5432
DB_DSN=host=converter_db user=${DB_USER} password=${DB_PASSWORD} dbname=${DB_NAME} port=5432 sslmode=require

# Database connection pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME_MINUTES=15

# ========================================
# BACKEND GO SETTINGS
# ========================================
PORT=8080

# JWT Secret - MUHIM: 64+ characters, kuchli secret yarating!
# Generate: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_STRONG_JWT_SECRET_MIN_64_CHARACTERS_LONG

# Internal API secret (Go <-> Realtime bridge)
# External app REST orqali cell update qilsa, web realtime ko'rsin degan feature uchun.
# Generate: openssl rand -base64 32
INTERNAL_API_SECRET=REPLACE_WITH_STRONG_INTERNAL_SECRET_MIN_32_CHARACTERS

# CORS allowed origins - Production domenlaringizni kiriting
# Vergul bilan ajrating, bo'sh joy qo'ymang
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# File upload limits (MB)
MAX_UPLOAD_SIZE_MB=100

# Rate limiting
RATE_LIMIT_PER_MINUTE=120

# ========================================
# ELIXIR/PHOENIX SETTINGS
# ========================================
MIX_ENV=prod
PHX_HOST=yourdomain.com
PHX_SERVER=true

# Elixir Secret Key Base - MUHIM: 64+ characters
# Generate: mix phx.gen.secret
ELIXIR_SECRET_KEY_BASE=REPLACE_WITH_STRONG_SECRET_KEY_BASE_MIN_64_CHARACTERS

# ========================================
# REDIS SETTINGS
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
# Redis password - kuchli parol qo'ying!
REDIS_PASSWORD=STRONG_REDIS_PASSWORD_HERE

# ========================================
# EMAIL SETTINGS (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
# Gmail uchun App Password: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=SheetMaster

# ========================================
# SSL/DOMAIN SETTINGS
# ========================================
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
REALTIME_DOMAIN=realtime.yourdomain.com

# SSL sertifikat yo'llari (Let's Encrypt)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ========================================
# BACKUP SETTINGS
# ========================================
BACKUP_KEEP_DAYS=30
BACKUP_PATH=/backups

# S3 backup (ixtiyoriy - AWS S3 uchun)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BACKUP_BUCKET=

# ========================================
# MONITORING & LOGGING
# ========================================
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=

# ========================================
# FRONTEND BUILD ARGS (docker-compose'da)
# ========================================
# VITE_API_BASE=https://api.yourdomain.com
# VITE_REALTIME_URL=wss://realtime.yourdomain.com/socket

# ========================================
# OPTIONAL: AI GEMINI (server-side default)
# ========================================
# Agar barcha userlar uchun default API key bo'lsa
# Lekin userlar o'z kalitlaridan ham foydalana oladi
# GEMINI_API_KEY=your-server-gemini-key-here
